<h2>Bienvenue sur le site des Jeux olympiques !</h2>

<div class="container-fluid">

    {{#each athletesPays}}
    <div class="row" style="margin: 5px 20px 5px 20px;">
        <div class="card" style="width: 100%; max-width: 50rem;">
            <div class="card-body">
                <!--<div style="display:inline;float:right"> <form method="POST" action="/api/sports/{{id}}?_method=DELETE" style="display:inline"><button type="submit" class="btn btn-danger" style="display:inline">Supprimer</button></form></div>
                -->    
                <div style="display:inline" class="card-title">{{firstName}}</div>
                <div style="display:inline" class="card-title">{{lastName}}</div>
                <div style="display:inline" class="card-title">{{gender}}</div>
                <div style="display:inline" class="card-title">{{country}}</div>
                <div style="display:inline"> <a href="/api/athletes/{{id}}/sports" class="card-link">Voir sports</a></div>
               </div>
        </div>
    </div>
    {{/each}}


     <form method="post" action="/api/athletes">
     <h3>Ajouter un athl√®te</h3>
        <label for="tbAthleteFirstName" style="width:80px;">First Name</label><input name="tbAthleteFirstName" type="text" class="form-control" id="tbAthleteFirstName" style="width:150px;display:inline"><br>
        <label for="tbAthleteLastName" style="width:80px;">Last Name</label><input name="tbAthleteLastName" type="text" class="form-control" id="tbAthleteLastName" style="width:150px;display:inline"><br>
        <label for="cbAthleteGender" style="width:80px;">Gender</label><input name="cbAthleteGender" type="checkbox" class="form-control" id="cbAthleteGender" style="display:inline;width:30px; vertical-align:middle" onclick="clickGender();"><label id="lGender" name="lGender" >  Female</label><br>
        <label for="sCountry" style="width:80px;">Country</label>
        <select id="sCountry"  class="form-control" name="sCountry"  style="width:150px;display:inline" >
            {{#each codeAphas}}
                <option value="{{code}}">{{nom}}</option>
            {{/each}}
        </select>    
        <button type="submit" class="btn btn-primary">Ajouter l'athlete</button>
    </form>
</div>